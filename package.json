{
  "name": "vue-esc",
  "version": "1.0.0",
  "description": ":running: Vue.js directive to add a document event listener on escape keyup.",
  "main": "dist/vue-esc.min.js",
  "author": {
    "name": "Ignacio Anaya",
    "email": "ignacio.anaya89@gmail.com"
  },
  "repository": "ianaya89/vue-esc",
  "keywords": [
    "vue-esc",
    "vue",
    "directive",
    "escape"
  ],
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=build",
    "dev": "webpack --progress --colors --watch --mode=dev",
    "test": "jest --coverage",
    "cover": "open coverage/lcov-report/index.html",
    "eslint": "eslint . --ext .js",
    "eslint:fix": "eslint . --fix .js",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-core": "6.17.0",
    "babel-eslint": "7.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.16.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "pre-commit": "^1.1.3",
    "webpack": "1.13.2",
    "webpack-merge": "^0.14.1",
    "yargs": "6.0.0"
  },
  "pre-commit": [
    "eslint"
  ],
  "jest": {
   "collectCoverage": true,
   "coverageThreshold": {
     "global": {
       "branches": 70,
       "functions": 70,
       "lines": 70,
       "statements": 70
     }
   },
   "collectCoverageFrom": [
     "src/**"
   ],
   "roots": [
     "test/"
   ]
 }
}
